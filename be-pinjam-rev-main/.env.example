# =====================
# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# =====================

# App Configuration
# PORT=5000  # Uncomment and set if needed (defaults to auto-detect)
NODE_ENV=development
AUTH_DEBUG=true

# MySQL Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_DATABASE=pinjam-kuy

# JWT Authentication Secret (use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_here

# Session Secret (use a strong random string in production)
SESSION_SECRET=your_session_secret_here

# File Upload Settings
UPLOAD_MAX_SIZE_MB=5
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,svg

# CORS Configuration (comma separated origins, leave empty to allow all in dev)
CORS_ORIGINS=

# Cloud Storage - Cloudinary Configuration
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
API_KEY=your_cloudinary_api_key
API_SECRET=your_cloudinary_api_secret
